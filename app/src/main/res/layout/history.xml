<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_drop"
            android:layout_centerVertical="true"
            android:id="@+id/logo" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/logo"
            android:fontFamily="@font/croissant_one"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/water1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_empty_water"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/logo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/water2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_empty_water"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/water1"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/water3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_empty_water"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/water2"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/water4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_empty_water"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/water3"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/water5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_empty_water"
            android:layout_below="@id/date"
            android:layout_toRightOf="@id/water4"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/waterDrank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/water5"
            android:fontFamily="@font/croissant_one"
            android:textColor="#000"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/goalReached"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/waterDrank"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/logo"
            android:fontFamily="@font/croissant_one"
            android:textColor="#000"
            android:textSize="25sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>